<% text = @message %>
<%= markdown(text).html_safe %>

<% @texts.each do |text| %>
  <ul>
    <il>タイトル：<%= text.title %></li>
    <il>内容：<%= text.contents %></li>
    <il>ジャンル：<%= text.genre %></li>
  </ul>
<% end %>

<script>
    $(document).ready(function(){
        $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
        });
    });
</script>

<input class="form-control" id="myInput" type="text" placeholder="Search Curriculum..">

<table class="table table-striped">
  <thead class="bg-danger text-white">
    <tr>
      <th>言語</th>
      <th>説明</th>
    </tr>
  </thead>
  <tbody id="myTable">
    <tr>
      <td>HTML/CSS</td>
      <td>Webサイトの画面を作るための言語</td>
    </tr>
    <tr>
      <td>Ruby</td>
      <td>Webサイトの裏側の処理をする言語</td>
      </tr>
    <tr>
      <td>Python</td>
      <td>人工知能を開発するための言語</td>
    </tr>
  </tbody>
</table>
