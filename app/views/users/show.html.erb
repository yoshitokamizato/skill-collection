<h1>【マイページ】</h1>
<p>メールアドレス：<%= @user.first.email %></p>
<hr>
<%= form_for @skill, method: :post do |f| %>
  <h2>学習内容を入力</h2>
  <p>言語名：<%= f.select :name, [["HTML","HTML"],["CSS","CSS"],["Javascript","Javascript"],["PHP","PHP"],["Ruby","Ruby"],["Python","Python"],["Swift","Swift"],["Unity","Unity"],["C#","C#"],["Java","Java"]] %></p>
  <p>学習時間：<%= f.number_field :study_time %></p>
  <p>目標時間：<%= f.number_field :target_time %></p>
  <input type="submit" value="送信">
<% end %>

<hr>

<div class="table-container">
  <table class="table table-striped">
    <thead class="bg-danger text-white">
      <tr>
        <th class="w-1">言語</th>
        <th class="w-2">学習時間</th>
        <th class="w-2">目標時間</th>
      </tr>
    </thead>
    <tbody>
      <% @user_skills.each do |skill| %>
        <tr>
          <td><%= skill.name %></td>
          <td><%= skill.study_time %>時間</td>
          <td><%= skill.target_time %>時間</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
