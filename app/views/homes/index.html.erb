<% if user_signed_in? %>

<input class="form-control" id="myInput" type="text" placeholder="Search Curriculum..">
<div class="table-container">
  <table class="table table-striped">
    <thead class="bg-danger text-white">
      <tr>
        <th class="w-1">No.</th>
        <th class="w-2">ジャンル</th>
        <th class="w-5">内容</th>
      </tr>
    </thead>
    <tbody>
      <% @texts.each do |text| %>
      <tr>
        <td><%= text.title %></td>
        <td><%= text.genre %></td>
        <td><%= link_to text.contents, "/texts/#{text.id}" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% else %>
<div class="alert alert-warning text-center my-4 mx-5" role="alert">
  <a class="text-danger" href="/users/sign_in">
    <strong>ログインしてください</strong>
  </a>
</div>
<% end %>
